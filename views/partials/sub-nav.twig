{% if menu %}
	<ul class="sub-menu" style="display: block;">
		{% for item in items %}
			<li class="{{ item.classes | join(' ') }}">
				<a target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
				{% include "partials/sub-nav.twig" with {'items': item.children} %}
			</li>
		{% endfor %}
	</ul>
{% endif %}
